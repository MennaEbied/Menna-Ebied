<div class="hero-gift-guide">
  <!-- Top Image -->
  <div class="hero-top-image" style="background-image: url('{% if section.settings.background_image %}{{ section.settings.background_image | img_url: '1500x' }}{% endif %}')"></div>

  <!-- Bottom Section -->
  <div class="hero-bottom-section">
    <div class="hero-content">
      <h1 class="hero-title">{{ section.settings.title }}</h1>
      <p class="hero-subtitle">{{ section.settings.subtitle }}</p>
      <a href="{{ section.settings.button_link }}" class="hero-button">
        {{ section.settings.button_text }}
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="svg-icon">
          <path d="M5 12H19M19 12L12 19M19 12L12 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    </div>

    <!-- Right Background Image -->
    <div class="hero-right-image" style="background-image: url('{% if section.settings.right_image %}{{ section.settings.right_image | img_url: '1500x' }}{% endif %}')"></div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Gift Guide",
  "settings": [
    {
      "type": "image_picker",
      "id": "top_image",
      "label": "Top Image"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Main Title",
      "default": "The Gift Guide"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    }
  ],
  "presets": [
    {
      "name": "Hero Gift Guide"
    }
  ]
}
{% endschema %}