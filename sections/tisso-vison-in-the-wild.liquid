<div id="tisso-vison-app" 
     data-collection-handle="{{ section.settings.products }}"
     data-section-id="{{ section.id }}">
  <h2 class="tisso-title">{{ section.settings.section_title }}</h2>
  <div class="product-grid" id="product-grid"></div>
</div>

<!-- Modal -->
<div id="product-modal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <div class="modal-body"></div>
  </div>
</div>

{% schema %}
{
  "name": "ImageRelation Tisso Vison in the Wild",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Tisso vison in the wild"
    },
    {
      "type": "text",
      "id": "products",
      "label": "products",
      "default": "frontpage"
    }
  ],
  "presets": [
    {
      "name": "Tisso Vison in the Wild"
    }
  ]
}
{% endschema %}